<header class="header">
	<div class="">
		{{> logo}}
	</div>
	<nav class="header-nav">
		<div class="header_nav_right">
			{{> nav list=header}}
		</div>
	</nav>
</header>

<main class="main">

	{{#with info}}
	<div class="info_main">
		<h1 class="info_title">{{title}}</h1>
		<p class="description_main">{{description}}</p>
	</div>
	{{/with}}

	{{#with form}}
	<div class="form_main">

		<form action="">
			{{#each inputs}}
			<input type="{{type}}" class="email_main" id="{{id}}" name="{{name}}" placeholder="{{placeholder}}">
			{{/each}}
		</form>

		<div class="checkbox_main">
			{{#with checkbox}}
			<input type="checkbox" class="checkbox_main_list" name="{{name}}">
			<label>{{label}}</label>
			{{/with}}
		</div>
		<button class="form_main_button">{{button}}</button>
		<div class="hr"></div>
		<p class="form_main_info">{{info}}</p>

	</div>
	{{/with}}
</main>

<div class="updates">
	{{#with updates}}
	<div>
		<h3 class="updates_title">{{title}}</h3>
	</div>

	<div class="updates_list">
		{{#each list}}
		<div class="list_info">
			<div>
				<div class="size_updates"></div>
				<div class="nick">
					<span class="nickname_info">{{nickname}}</span>
					<p class="updates_list_description">{{description}}</p>
				</div>
			</div>
		</div>
		{{/each}}
	</div>
	<a href="{{show_all.url}}" class="show_all">{{show_all.text}}</a>
	{{/with}}

</div>

<div class="expirience">
	{{#with expirience}}
	<div class="badge_expirience">{{badge}}</div>
	<h2 class="title_expirience">{{title}}</h2>
	<div class="list_expirience">
		{{#each list}}
		<div class="card_expirience">
			<span>{{name}}</span>
			<p>{{details}}</p>
		</div>
		{{/each}}
	</div>

	{{/with}}

</div>



<footer class="footer">

	<div>
		{{> logo}}
		<span class="footer_copyright">Copyright 2023-2024</span>
	</div>

	{{#each footer}}
	<div>
		<span class="footer_title">{{title}}</span>
		{{> nav list=links isVertical=true}}
	</div>
	{{/each}}

</footer>